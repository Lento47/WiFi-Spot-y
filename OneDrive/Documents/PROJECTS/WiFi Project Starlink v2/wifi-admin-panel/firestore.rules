rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Logged-in users can create/update their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Logged-in users can create their own payment records and read their own history.
    match /payments/{paymentId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Any logged-in user can read the list of available time packages.
    match /timePackages/{packageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'lejzer36@gmail.com';
    }
    
    // Logged-in users can create and read tokens that belong to them.
    match /tokens/{tokenId} {
    	allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
