rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // This rule targets the 'receipts' folder.
    match /receipts/{userId}/{allPaths=**} {
    
      // Allow a user to read and write (upload) files only if:
      // 1. They are logged in (request.auth != null).
      // 2. The folder's name {userId} exactly matches their own user ID.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}